--2
print("Please enter the first number: ")
numOne = tonumber(io.read())

while numOne == nil do
  print("Not a number try again: ")
  numOne = tonumber(io.read())
end

print("Please enter the second number: ")
numTwo = tonumber(io.read())

while numTwo == nil do
  print("Not a number try again: ")
  numTwo = tonumber(io.read())
end

total = numOne + numTwo

print(total)
