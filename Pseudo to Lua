--4
math.randomseed(os.time())
control = true
while control == true do
  print("Define max number: ")
  maxNum = io.read()
  maxNum = tonumber(maxNum)
  while type(maxNum) ~= "number" do
    print("Not a number, try again: ")
    maxNum = io.read()
    maxNum = tonumber(maxNum)
  end

  rand = math.random(0, maxNum)
  print(rand)
  print("Do you want to continue? (y/n)")
  input = io.read()
  if input == "n" then
    control = false
  end
end
--]]
--5
math.randomseed(os.time())
leftCount = 0
rightCount = 0

for i = 1, 10 do
  randNum = math.random(1, 100)
  if randNum % 2 == 0 then
    rightCount = rightCount + 1
  else
    leftCount = leftCount + 1
  end
end

print("left count: ", leftCount)
print("right count: ", rightCount)
--]]
